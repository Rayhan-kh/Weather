<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.mrexray.www.weather.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:text="22 C "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:id="@+id/tvTemp"
        android:textSize="60sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="Pressure : 256kpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPressure"
        android:textColor="#fff"
        android:layout_below="@+id/tvDescription"
        android:layout_alignLeft="@+id/tvTemp"
        android:layout_alignStart="@+id/tvTemp"
        android:textSize="16sp" />

    <TextView
        android:text="Humidity: 89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHumidity"
        android:textColor="#fff"
        android:layout_below="@+id/tvPressure"
        android:layout_alignLeft="@+id/tvPressure"
        android:layout_alignStart="@+id/tvPressure"
        android:textSize="16sp" />

    <TextView
        android:text="Wind Speed: 12 km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWindSp"
        android:textColor="#fff"
        android:layout_below="@+id/tvHumidity"
        android:layout_alignLeft="@+id/tvHumidity"
        android:layout_alignStart="@+id/tvHumidity"
        android:textSize="16sp" />

    <TextView
        android:text="Thunder Storm"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:textSize="26sp"
        android:textColor="#fff"
        android:layout_below="@+id/tvTemp"
        android:layout_alignLeft="@+id/tvTemp"
        android:layout_alignStart="@+id/tvTemp"
         />

        <LinearLayout
            android:background="#162b2b2b"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWindSp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="Fri"
                    android:gravity="center"
                    android:id="@+id/tvDay1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="Sat"
                    android:gravity="center"
                    android:id="@+id/tvday2" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="Sun"
                    android:gravity="center"
                    android:id="@+id/tvDay3" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="Mon"
                    android:gravity="center"
                    android:id="@+id/tvDay4" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="Tue"
                    android:gravity="center"
                    android:id="@+id/tvDay5" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="wed"
                    android:gravity="center"
                    android:id="@+id/tvDay6" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="Thr"
                    android:gravity="center"
                    android:id="@+id/tvDay7" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon1"
                    android:tint="#fff"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon2"
                    android:tint="#fff"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon3"
                    android:tint="#fff"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon4"
                    android:tint="#fff"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon5"
                    android:tint="#fff"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon6"
                    android:tint="#fff"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="16dp"
                    android:src="@color/colorAccent"
                    android:id="@+id/imgIcon7"
                    android:tint="#fff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="22"
                    android:gravity="center"
                    android:id="@+id/tvCast1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="23"
                    android:gravity="center"
                    android:id="@+id/tvCast2" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="25"
                    android:gravity="center"
                    android:id="@+id/tvCast3" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="23"
                    android:gravity="center"
                    android:id="@+id/tvcast4" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="23"
                    android:gravity="center"
                    android:id="@+id/tvCast5" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="24"
                    android:gravity="center"
                    android:id="@+id/tvCast6" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:text="24"
                    android:gravity="center"
                    android:id="@+id/tvCast7" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/imageButton"
            android:elevation="3dp"
            android:cropToPadding="false"
            android:background="#00ffffff"
            android:onClick="edit"
            android:adjustViewBounds="false" />

        <TextView
            android:text="Dhaka, Bangladesh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_alignLeft="@+id/tvTemp"
            android:layout_alignStart="@+id/tvTemp"
            android:id="@+id/tvLocation"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:text="22 March 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLocation"
            android:layout_alignLeft="@+id/tvLocation"
            android:layout_alignStart="@+id/tvLocation"
            android:id="@+id/tvDate"
            android:textSize="14sp"
            android:textColor="#fff" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="SunRise : 7:30 am "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSunRise"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_below="@id/tvWindSp"
            android:layout_alignStart="@+id/tvWindSp"
            android:layout_alignLeft="@+id/tvWindSp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSunSet"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="Sunset : 5:30 pm"
            android:layout_alignStart="@+id/tvSunRise"
            android:layout_alignLeft="@+id/tvSunRise"
            android:layout_below="@+id/tvSunRise"
             />
    </RelativeLayout>

</ScrollView>
